{
    "name": "localhost",
    "haproxy" : {
        "ec2" : {
            "query_tags" : {
                "stack-instance-id" : "@@STACK_NAME@@",
                "Status" : "complete"
            },
            "box_tags" : {
                "haproxy-role" : role.lower(),
                "stack-instance-id" : "@@STACK_NAME@@",
                "Status" : "complete"
            }
        }
    },
    "alfresco" : {
        "public_hostname" : "@@FQDN@@",
        "log.json.enabled" : true,
        "version" : "5.0.2",
        "components" : ["haproxy","nginx","tomcat","transform","repo","share","aos"],
        "restart_services" : ["tomcat-alfresco","tomcat-share"],
        "jmxremote_databag" : "@@JMXREMOTE_DATABAG@@",
        "jmxremote_databag_items" : ["systemsmonitor","systemscontrol"],
        "shareproperties" : {
          "hz_aws_enabled" : true
        },
        "properties" : {
            "s3.accessKey" : "@@AWS_ACCESS_KEY@@",
            "s3.secretKey" : "@@AWS_SECRET_KEY@@",
            "hz_aws_access_key" : "@@AWS_ACCESS_KEY@@",
            "hz_aws_secret_key" : "@@AWS_SECRET_KEY@@",
            "db.host" : "@@DB_HOST@@",
            "db.dbname" : props['DB_NAME'],
            "db.username" : props['DB_USERNAME'],
            "db.password" : props['DB_PASSWORD'],
            "db.prefix" : "mysql",
            "s3.bucketName" : props['CONTENTSTORE_S3_BUCKET'],
            "s3.bucketLocation" : props['AWS_REGION'],
            "s3.bucketRegion" : props['AWS_REGION'],
            "s3service.s3-endpoint" : "s3.%s.amazonaws.com" % props['AWS_REGION'],
            "hz_aws_enabled" : true,
            "hz_aws_sg_name" : "@@AWS_SG_NAME@@",
            "hz_aws_tag_key" : "haproxy-role",
            "hz_aws_tag_value" : "share"
        },
        "repo_tomcat_instance" : {
            "xmx_ratio" : 0.5
        },
        "share_tomcat_instance" : {
            "xmx_ratio" : 0.5
        }
    },
    "tomcat" : {
        "cleaner.minutes.interval" : 1
    },
    "run_list": ["img-alfresco::default"]
}
