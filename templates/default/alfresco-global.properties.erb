###############################
## Alfresco Properties #
###############################

#
# Contentstore
#-------------
dir.root=<%= node['alfresco']['properties']['dir.root'] %>

#
# Database
#-------------
db.driver=<%= node['alfresco']['properties']['db.driver'] %>
db.url=<%= node['alfresco']['properties']['db.url'] %>
db.username=<%= node['alfresco']['properties']['db.username'] %>
db.password=<%= node['alfresco']['properties']['db.password'] %>

#
# Clustering
#-------------
alfresco.cluster.name=<%= node['alfresco.cluster.name'] %>

#
# Transformations
#-------------
ooo.exe=<%= node['alfresco']['properties']['ooo.exe'] %>
ooo.enabled=<%= node['alfresco']['properties']['ooo.enabled'] %>
jodconverter.officeHome=<%= node['alfresco']['properties']['jodconverter.officeHome'] %>
jodconverter.portNumbers=<%= node['alfresco']['properties']['jodconverter.portNumbers'] %>
jodconverter.enabled=<%= node['alfresco']['properties']['jodconverter.enabled'] %>
img.root=<%= node['alfresco']['properties']['img.root'] %>
swf.exe=<%= node['alfresco']['properties']['swf.exe'] %>

#
# FTP
#-------------
ftp.enabled=<%= node['alfresco']['properties']['ftp.enabled'] %>

#
# Outbound Email Configuration
#-------------
mail.protocol=<%= node['alfresco']['properties']['mail.protocol'] %>
<% if node['alfresco']['properties']['mail.host'] -%>
mail.host=<%= node['alfresco']['properties']['mail.host'] %>
<% end -%>
mail.port=<%= node['alfresco']['properties']['mail.port'] %>
mail.username=<%= node['alfresco']['properties']['mail.username'] %>
<% if node['alfresco']['properties']['mail.password'] -%>
mail.password=<%= node['alfresco']['properties']['mail.password'] %>
<% end -%>
mail.encoding=<%= node['alfresco']['properties']['mail.encoding'] %>
mail.from.default=<%= node['alfresco']['properties']['mail.from.default'] %>
mail.smtp.auth=<%= node['alfresco']['properties']['mail.smtp.auth'] %>

<% if node['alfresco']['properties']['mail.smtps.starttls.enable'] -%>
mail.smtps.starttls.enable=<%= node['alfresco']['properties']['mail.smtps.starttls.enable'] %>
<% end -%>
<% if node['alfresco']['properties']['mail.smtps.auth'] -%>
mail.smtps.auth=<%= node['alfresco']['properties']['mail.smtps.auth'] %>
<% end -%>

<% if node['alfresco']['properties']['mail.smtp.auth'] %>
mail.smtp.auth=<%= node['alfresco']['properties']['mail.smtp.auth'] %>
<% end -%>

#
# Search Configuration
#----------------
index.subsystem.name=<%= node['alfresco']['properties']['index.subsystem.name'] %>
solr.host=<%= node['alfresco']['solrproperties']['solr.host'] %>
solr.port=<%= node['alfresco']['solrproperties']['solr.port'] %>
solr.port.ssl=<%= node['alfresco']['solrproperties']['solr.port.ssl'] %>
solr.secureComms=<%= node['alfresco']['solrproperties']['solr.secureComms'] %>

#
# URL Generation Parameters (The ${localname} token is replaced by the local server name)
#-------------
alfresco.context=<%= node['alfresco']['properties']['alfresco.context'] %>
alfresco.host=<%= node['alfresco']['properties']['alfresco.host'] %>
alfresco.port=<%= node['alfresco']['properties']['alfresco.port'] %>
alfresco.protocol=<%= node['alfresco']['properties']['alfresco.protocol'] %>

share.context=<%= node['alfresco']['properties']['share.context'] %>
share.host=<%= node['alfresco']['properties']['share.host'] %>
share.port=<%= node['alfresco']['properties']['share.port'] %>
share.protocol=<%= node['alfresco']['properties']['share.protocol'] %>

#
# IMAP
#------------------------
imap.server.enabled=<%= node['alfresco']['properties']['imap.server.enabled'] %>
imap.server.port=<%= node['alfresco']['properties']['imap.server.port'] %>
imap.server.host=<%= node['alfresco']['properties']['imap.server.host'] %>

#
# CIFS
#------------------------
cifs.enabled=<%= node['alfresco']['properties']['cifs.enabled'] %>
cifs.serverName=<%= node['alfresco']['properties']['cifs.serverName'] %>
cifs.ipv6.enabled=<%= node['alfresco']['properties']['cifs.ipv6.enabled'] %>
cifs.tcpipSMB.port=<%= node['alfresco']['properties']['cifs.tcpipSMB.port'] %>
cifs.netBIOSSMB.namePort=<%= node['alfresco']['properties']['cifs.netBIOSSMB.namePort'] %>
cifs.netBIOSSMB.datagramPort=<%= node['alfresco']['properties']['cifs.netBIOSSMB.datagramPort'] %>
cifs.netBIOSSMB.sessionPort=<%= node['alfresco']['properties']['cifs.netBIOSSMB.sessionPort'] %>
