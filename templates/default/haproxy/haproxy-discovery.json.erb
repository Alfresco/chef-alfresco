{
    "name": "haproxy-discovery",
    "haproxy" : {
        "ec2" : {
            "query_tags" : {
                <% if node['haproxy']['ec2']['query_tags'] -%>
                  <% node['haproxy']['ec2']['query_tags'].each_with_index do |(tagName,tagValue),i| -%>
                    "<%= tagName %>" : "<%= tagValue %>"<% unless i == node['haproxy']['ec2']['query_tags'].size - 1 -%>,<% end -%>
                  <% end -%>
                <% end -%>
            }
        }
    },
    "run_list": ["alfresco::haproxy-ec2-discovery"]
}
