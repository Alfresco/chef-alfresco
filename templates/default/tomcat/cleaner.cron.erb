# Clean cache files not used by 30 minutes
*/<%= node['tomcat']['cleaner.minutes.interval'] %> * * * * root find <%= @tomcat_cache_path %> -mmin +<%= node['tomcat']['cleaner.minutes.interval'] %> -type f -exec rm {} \;

# Clean rotated logs
20 0 * * * root rm -rf <%= @tomcat_log_path %>/alfresco.*.log
