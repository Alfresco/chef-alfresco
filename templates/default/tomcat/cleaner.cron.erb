# Clean cache files not used by 30 minutes
*/<%= node['tomcat']['cleaner.minutes.interval'] %> * * * * root find <%= @tomcat_cache_path %> -mmin +<%= node['tomcat']['cleaner.minutes.interval'] %> -type f -exec rm -rf {} \; >/dev/null 2>&1

# Clean rotated logs
